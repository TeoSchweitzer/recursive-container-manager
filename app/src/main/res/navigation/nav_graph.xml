<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.recursivecontainermanager.fragments.MainFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_mainFragment_to_itemEditionFragment"
            app:destination="@id/itemEditionFragment" />
    </fragment>

    <fragment
        android:id="@+id/itemEditionFragment"
        android:name="com.example.recursivecontainermanager.fragments.ItemEditionFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_itemEditionFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>