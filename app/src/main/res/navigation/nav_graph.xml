<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.recursivecontainermanager.fragments.MainFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_mainFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>


    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.example.recursivecontainermanager.fragments.MainMenuFragment"
        android:label="Menu">

        <action
            android:id="@+id/action_mainMenuFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>