<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_name_text"
        tools:text="Item Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_owner_text"
        tools:text="Item Owner(s)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_tags_text"
        tools:text="tag1, tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_tokens_text"
        tools:text="12345"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/add_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item Inside" />

    <Button
        android:id="@+id/alter_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alter Item" />

    <Button
        android:id="@+id/delete_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Item" />

    <Button
        android:id="@+id/json_sharing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JSON" />

    <Button
        android:id="@+id/token_sharing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Token Share" />

    <Button
        android:id="@+id/qrcode_sharing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Code" />

</LinearLayout>