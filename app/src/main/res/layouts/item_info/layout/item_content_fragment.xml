<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/customborder"
    android:backgroundTint="@color/bleu_pomme">

    <EditText
        android:id="@+id/name_tag_filter_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/edittextborder"
        android:hint="@string/tag_name_filter"
        android:minHeight="48dp"
        android:textColor="@color/yellow"
        android:textColorHint="@color/yellow"
        android:shadowColor="@color/violet"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/max_recursion_button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:text="@string/max"
        android:theme="@style/Button.cool"
        android:shadowColor="@color/violet"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="1"
        app:layout_constraintBottom_toBottomOf="@+id/less_recursion_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_content_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/min_recursion_button" />

    <Button
        android:id="@+id/more_recursion_button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:text="@string/plus"
        android:textSize="24sp"
        android:theme="@style/Button.cool"
        android:shadowColor="@color/violet"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="1"
        app:layout_constraintBottom_toBottomOf="@+id/max_recursion_button"
        app:layout_constraintEnd_toStartOf="@+id/max_recursion_button"
        app:layout_constraintTop_toTopOf="@+id/min_recursion_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/min_recursion_button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/min"
        android:theme="@style/Button.cool"
        android:shadowColor="@color/violet"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recursion_level_textview" />

    <TextView
        android:id="@+id/recursion_level_text"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/customtextborder"
        android:text="@string/_1"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textColorHint="@color/yellow"
        android:textSize="24sp"
        android:visibility="visible"
        android:shadowColor="@color/violet"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1"
        app:layout_constraintBottom_toBottomOf="@+id/min_recursion_button"
        app:layout_constraintEnd_toStartOf="@+id/more_recursion_button"
        app:layout_constraintStart_toEndOf="@+id/less_recursion_button"
        app:layout_constraintTop_toTopOf="@+id/min_recursion_button" />

    <Button
        android:id="@+id/less_recursion_button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:shadowColor="@color/violet"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:text="@string/tiret"
        android:textSize="24sp"
        android:theme="@style/Button.cool"
        app:layout_constraintBottom_toBottomOf="@+id/min_recursion_button"
        app:layout_constraintStart_toEndOf="@+id/min_recursion_button" />

    <TextView
        android:id="@+id/recursion_level_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/niveau_de_r_cursion"
        android:textColor="@color/yellow"
        android:textColorHint="@color/yellow"
        android:shadowColor="@color/violet"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tag_filter_field" />

    <TextView
        android:id="@+id/title_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/customtitleborder"
        android:text="@string/content"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textColorHint="@color/yellow"
        android:shadowColor="@color/violet"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1"
        app:layout_constraintBottom_toTopOf="@+id/name_tag_filter_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>