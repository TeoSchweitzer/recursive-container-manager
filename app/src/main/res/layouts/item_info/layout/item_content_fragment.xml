<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:background="@drawable/customborder"
    android:backgroundTint="@color/bleu_pomme">

    <EditText
        android:id="@+id/name_tag_filter_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/customtextborder"
        android:hint="@string/tag_name_filter"
        android:minHeight="48dp"
        android:textColor="@color/yellow"
        android:textColorHint="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/min_recursion_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:text="@string/min"
        android:theme="@style/Button.cool"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/less_recursion_button" />

    <Button
        android:id="@+id/less_recursion_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/tiret"
        android:theme="@style/Button.cool"
        app:layout_constraintEnd_toEndOf="@+id/min_recursion_button"
        app:layout_constraintTop_toBottomOf="@+id/name_tag_filter_field" />

    <TextView
        android:id="@+id/recursion_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1"
        android:theme="@style/Button.cool"
        app:layout_constraintBottom_toTopOf="@+id/max_recursion_button"
        app:layout_constraintEnd_toStartOf="@+id/max_recursion_button"
        app:layout_constraintStart_toEndOf="@+id/min_recursion_button"
        app:layout_constraintTop_toBottomOf="@+id/more_recursion_button" />

    <Button
        android:id="@+id/more_recursion_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:theme="@style/Button.cool"
        app:layout_constraintBottom_toBottomOf="@+id/less_recursion_button"
        app:layout_constraintStart_toStartOf="@+id/max_recursion_button" />

    <Button
        android:id="@+id/max_recursion_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:text="@string/max"
        android:theme="@style/Button.cool"
        app:layout_constraintBottom_toBottomOf="@+id/min_recursion_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/more_recursion_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_content_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/min_recursion_button" />

</androidx.constraintlayout.widget.ConstraintLayout>