<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_position_field" />

    <EditText
        android:id="@+id/item_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/item_owners_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Owners"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_name_field" />


    <EditText
        android:id="@+id/item_sub_owners_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Sub-Owners"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_owners_field" />

    <EditText
        android:id="@+id/item_read_only_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Read Only Users"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_sub_owners_field" />

    <EditText
        android:id="@+id/item_tags_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tags: tag1, tag2"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_read_only_field" />

    <EditText
        android:id="@+id/item_position_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item position. Ex: 'To the left'"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_tags_field" />

</androidx.constraintlayout.widget.ConstraintLayout>